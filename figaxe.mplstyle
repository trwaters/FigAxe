
font.family : serif # STIXGeneral 
font.size : 12
ps.fonttype : 42 # note: fontype 42 compatible with MNRAS style file when saving figs
mathtext.fontset : stix

axes.labelsize : 12
axes.linewidth : 1.
xtick.major.size : 6
xtick.minor.size : 3
ytick.major.size : 6
ytick.minor.size : 3
xtick.labelsize : 10
ytick.labelsize : 10
legend.numpoints : 1  # uses 1 marker symbol instead of 2
legend.frameon : False 
legend.handletextpad : 0.3
figure.dpi : 150  # note: default is 100 in matplotlib